{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": false,
    "pretty": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2018", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/__tests__/**/*", ".history"]
}
